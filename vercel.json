{
  "name": "quicktalk-frontend",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://quicktalk-backend.onrender.com/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/chat/(.*)",
      "dest": "https://quicktalk-backend.onrender.com/chat/$1",
      "methods": ["GET", "POST"],
      "headers": {
        "Upgrade": "websocket",
        "Connection": "Upgrade"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https://quicktalk-backend.onrender.com wss://quicktalk-backend.onrender.com"
        }
      ]
    }
  ],
  
  "env": {
    "VITE_API_URL": "https://quicktalk-backend.onrender.com",
    "VITE_DEBUG": "false"
  }
}